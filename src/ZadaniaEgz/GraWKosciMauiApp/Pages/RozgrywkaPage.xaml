<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GraWKosciMauiApp.Pages.RozgrywkaPage"
             Title="RozgrywkaPage">

    <ContentPage.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Chocolate" />
            <Setter Property="Margin" Value="20" />
            <Setter Property="WidthRequest" Value="200" />
        </Style>
        <Style x:Key="PanelStyle" TargetType="VerticalStackLayout">
            <Setter Property="BackgroundColor" Value="NavajoWhite" />
        </Style>
        <Style x:Key="ImageStyle" TargetType="Image">
            <Setter Property="Source" Value="question.jpg" />
            <Setter Property="WidthRequest" Value="70" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding}" Value="1" TargetType="Image">
                    <Setter Property="Source" Value="k1.jpg" />
                </DataTrigger>
                <DataTrigger Binding="{Binding}" Value="2" TargetType="Image">
                    <Setter Property="Source" Value="k2.jpg" />
                </DataTrigger>
                <DataTrigger Binding="{Binding}" Value="3" TargetType="Image">
                    <Setter Property="Source" Value="k3.jpg" />
                </DataTrigger>
                <DataTrigger Binding="{Binding}" Value="4" TargetType="Image">
                    <Setter Property="Source" Value="k4.jpg" />
                </DataTrigger>
                <DataTrigger Binding="{Binding}" Value="5" TargetType="Image">
                    <Setter Property="Source" Value="k5.jpg" />
                </DataTrigger>
                <DataTrigger Binding="{Binding}" Value="6" TargetType="Image">
                    <Setter Property="Source" Value="k6.jpg" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </ContentPage.Resources>


    <Grid RowDefinitions="*,Auto,*">
        <VerticalStackLayout Style="{StaticResource PanelStyle}">
            <Label Padding="10" 
                   Margin="0, 10, 0, 0"
                   BackgroundColor="Brown" 
                   TextColor="White"  
                   Text="Gra w kości. Autor 000000001"/>

            <Button Text="Rzuć koscmi" Style="{StaticResource ButtonStyle}" Clicked="RzucKoscmi_Clicked" />
        </VerticalStackLayout>

        <CollectionView HorizontalOptions="Center"
            HeightRequest="100"            
            ItemsLayout="HorizontalList" x:Name="LiczbyCollectionView" Grid.Row="1">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Image Style="{StaticResource ImageStyle}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <VerticalStackLayout Grid.Row="2" Style="{StaticResource PanelStyle}" >
            <HorizontalStackLayout>
                <Label Text="Wyniki tego losowania: " HorizontalOptions="Center" Margin="10"  />
                <Label x:Name="WynikLosowania"  />
            </HorizontalStackLayout>

            <HorizontalStackLayout>
                <Label Text="Wynik gry:" HorizontalOptions="Center" />
                <Label x:Name="WynikGry" />
            </HorizontalStackLayout>
            

            <Button Text="Resetuj wynik" Style="{StaticResource ButtonStyle}"
                    Clicked="ResetujWynik_Clicked"
                    />

        </VerticalStackLayout>
    </Grid>
</ContentPage>